<div class="container">
<div class="background">
<div class="row justify-content">
<div class="col-12 mt-3">
    <div class="card-white" id="course-introduction">
      <h2><strong> <%= @course.classstyle %> Yoga</strong></h2>
      <p>üóì <%= @course.date.strftime("%B %d, %Y") %>
      <p>‚è∞ <%= @course.start_time.strftime("%H:%M") %> - <%= @course.end_time.strftime("%H:%M") %> </p>
      <p>‚ù§Ô∏è <%= @teacher.ratings %> | 56 reviews </p>
    </div>

    <div class="card-white" id="course-teacher">
      <img src="https://thispersondoesnotexist.com/image" class="img-circle" width="100px">
      <p><strong><%= @teacher.first_name %> <%= @teacher.last_name %></strong></p>
       <% if @teacher.certification %>
       <p class="certification"> Certification: <i class="far fa-file-pdf"></i>
      <% else %>
      <% end %></p>
    </div>

    <div class="card-white" id="course-description">
      <p><%= @course.description %></p>
      <p><i class="far fa-credit-card"></i><%= @course.price %> <i class="fas fa-euro-sign"></i> / day </strong></p>
      <div id="map"
          style="width: 97%; height: 240px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
      <br />
      <p><%= @course.address %></p>
    </div>

    <div class="card-white" id="course-teacher">
      <img src="https://thispersondoesnotexist.com/image" class="img-circle" width="100px">
      <p><strong><%= @teacher.first_name %> <%= @teacher.last_name %></strong></p>
       <% if @teacher.certification %>
       <p class="certification"> Certification: <i class="far fa-file-pdf"></i>
      <% else %>
      <% end %></p>
    </div>

    <div class="card-white" id="course-booking">
    <p>3 out of 20 spots available</p>
    <p><%#=link_to "Book your course now", course_bookings_path(@course), method: :post, class: "btn-style" %></p>
    <%= form_tag course_bookings_path(@course) do %>
  <%= hidden_field_tag 'course_id', @course.id %>
  <%= submit_tag 'Purchase', class: 'btn btn-primary' %>
<% end %>
  </div>
</div>
