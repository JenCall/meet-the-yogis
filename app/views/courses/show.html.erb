<div class="yogi-container">
  <div class="container-back-button">
  <%= link_to "<", teachers_path, class:"go-back-button" %>
  </div>
    <div class="card-white" id="course-introduction">
      <h2><strong> <%= @course.classstyle %> Yoga</strong></h2>
      <p>🗓 <%= @course.date.strftime("%B %d, %Y") %>
      <p>⏱ <%= @course.start_time.strftime("%H:%M") %> - <%= @course.end_time.strftime("%H:%M") %> </p>
      <p> <% 5.times do %>
        <i class="fas fa-star"></i>
        <% end %> <reviews> | <%= rand(500..999) %> reviews</reviews></p>
    </div>

    <div class="card-white" id="course-teacher">
      <%#= cl_image_tag @teacher.profile_avatar.key, height: 100, width: 100, class: "img-circle" %>
      <div>
      <p class="teacher"><strong><%= @teacher.first_name %> <%= @teacher.last_name %></strong></p>
       <% if @teacher.certification %>
       <p class="certification"> Certified teacher <i class="far fa-file-pdf"></i></p>
      <% else %>
      <% end %>
     </div>
    </div>

    <div class="card-white" id="course-description">
      <p><%= @course.description %></p>
      <p><i class="far fa-credit-card"></i><strong><%= @course.price %> <i class="fas fa-euro-sign"></i> / class </strong></p>
      <div id="map"
          style="width: 100%; height: 240px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
      <br />
      <p>📍 <%= @course.address %></p>
      </div>

    <div class="card-white" id="course-booking">
    <p>3 out of 20 spots available</p>
    <%= form_tag course_bookings_path(@course) do %>
    <%= hidden_field_tag 'course_id', @course.id %>
    <%= submit_tag 'Purchase', class: 'btn-style' %>
    <% end %>
  </div>
</div>


