<hr>

<div class="container">
  <div class="row justify-content">
    <div class="">
    <iframe width="500" height="300" src="https://www.youtube.com/embed/SZCxKjgReQ4" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    <hr>
    <h2><%= @teacher.first_name %> <%= @teacher.last_name %> | <small><i class="far fa-heart" style="font-size: 0.90em;"></i></small> </h2>
    <% if @teacher.certification == true %>
    <p> Certified Teacher | <%= @teacher.certificationhours %>h Yoga Alliance </p>
    <% else %>
    <p> Community Teacher </p>
    <% end %>
    <hr>

    <p> Ashtanga &#124;&#124;&#124;&#124;&#124; Vinyasa &#124;&#124;&#124; Yin &#124;&#124;</p>
    <hr>

    <h5><strong>About me</strong></h5>
    <p><%= @teacher.about_me %></p>
    <hr>

    <% search_items = ["yoga", "pilates", "yogis", "yogi", "yoga teacher", "yoga trainer", "yoga class"] %>

    <% levels = ["easy level", "moderate level", "advanced level", "all levels"] %>

    <hr>
    <div class="container-fluid">
      <div class="row">
        <div class="col-12 mt-3">
          <% @teacher.courses.each do |course| %>
          <div class="card">
            <div class="card-horizontal" style="display: flex; flex: 1 1 auto;">
              <div class="img-square-wrapper">
                <img src="https://source.unsplash.com/featured/?<%= search_items.sample %>" class="card-img-top" alt="" style="height: 10rem; object-fit: cover">
              </div>
              <div class="card-body">
                  <h4 class="card-title"><strong><%= course.classstyle %></strong> <small><i class="far fa-heart" style="font-size: 0.73em;"></i></small> </h4>
                  <p class="card-text"> Mindfull <%= course.classstyle %> | <% levels.sample %> </p>
                  <p class="card-text"> <%= "Prices from #{[15.99, 18.50,12.99,13.99,14.75].sample}" %><small><i class="fas fa-euro-sign"></i></small> / day</p>
              </div>
            </div>
            <div class="card-footer">
              <%= link_to "See more Details", course_path(course), class:"btn btn-outline-success" %>
            </div>
          </div>
          <hr>
          <% end %>
        </div>
      </div>
    </div>
    <hr>
  </div>
</div>
<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<div class="jumbotron">
    <p>Create your account today, it is easy and quick!</p>
    <a class="btn btn-outline-success" href="#" role="button">Create an account</a>
    <hr>
    <div>
      <%= link_to "Teachers", teachers_path, class:"btn btn-outline-success" %>
    </div>
  </div>
