<hr>
<hr>
<hr>
<div class="container">
  <div class="go-back-buttom">
    <%= link_to "<", teachers_path, class:"btn btn-outline-success" %>
  </div>
</div>
<hr>

<div class="container">

  <iframe width="350" height="200" src="https://www.youtube.com/embed/SZCxKjgReQ4" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
  <hr>

  <h2><%= @teacher.first_name %> <%= @teacher.last_name %> | <small><i class="far fa-heart" style="font-size: 0.90em;"></i></small> </h2>
  <% if @teacher.certification == true %>
  <p> Certified Teacher | <%= @teacher.certificationhours %>h Yoga Alliance </p>
  <% else %>
  <p> Community Teacher </p>
  <% end %>
  <hr>

  <div>
    <p>Ashtanga &#124;&#124;&#124;&#124;&#124; Vinyasa &#124;&#124;&#124; Yin &#124;&#124;</p>
  </div>
  <hr>

  <div>
    <h5><strong>About me</strong></h5>
    <p><%= @teacher.about_me %></p>
  </div>
  <hr>

</div>

<div class="container">
    <% search_items = ["yoga", "pilates", "yogis", "yogi", "yoga teacher", "yoga trainer", "yoga class"] %>

    <% levels = ["easy level", "moderate level", "advanced level", "all levels"] %>

  <hr>
  <div class="container-fluid">
    <div class="row">
      <div class="col-12 mt-3">
        <% @teacher.courses.each do |course| %>
        <div class="card">
          <div class="card-horizontal" style="display: flex; flex: 1 1 auto;">
            <div>
              <img src="https://source.unsplash.com/featured/?<%= search_items.sample %>" class="card-img-top" alt="" style="height: 8rem; object-fit: cover">
            </div>
            <div class="card-body">
              <h4 class="card-title"><strong><%= course.classstyle %> Yoga</strong> <small><i class="far fa-heart" style="font-size: 0.73em;"></i></small> </h4>
              <p class="card-text"> Mindfull <%= course.classstyle %> | <%= levels.sample %> </p>
              <p class="card-text"> <%= "Prices from #{[15.99, 18.50,12.99,13.99,14.75].sample}" %><small><i class="fas fa-euro-sign"></i></small> / day</p>
              <%= link_to "See more", course_path(course), class:"btn-classes" %>
            </div>
          </div>
        </div>
        <hr>
        <% end %>
      </div>
    </div>
  </div>
  <hr>
</div>

<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<div class="jumbotron">
  <p>Create your account today, it is easy and quick!</p>
  <a class="btn btn-outline-success" href="#" role="button">Create an account</a>
</div>
