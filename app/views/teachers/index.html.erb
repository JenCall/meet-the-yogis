<div class="container-back-buttom">
  <%= link_to "<", root_path, class:"go-back-buttom" %>
  <br>
</div>

<br>
<h2 style="display:flex; flex-direction: row; justify-content: center; align-items: center; margin-top: 20px;" > Yoga teachers</h2>
<!-- Insert the location afterwards-->

<hr>

<hr>

<div class="container">
  <div class="form-inputs">
     <%= simple_form_for :query, url: teachers_path, method: "GET" do |f| %>
    <div class="row g-2">
      <div class="col-4"><%= f.input :address, collection: @addresses, label: false, prompt: "City", input_html: { class: "filter_search" } %></div>
      <div class="col-4"><%= f.input :date, as: :string, required: false, label: false, prompt: "Date", input_html: {class: "datepicker"}%></div>
      <div class="col-4"><%= f.input :style, collection: @styles, label: false, prompt: "Style"%></div>
    </div>
    <div class="row g-3">
      <div class="col-4">
      <span>10</span> <span>---------</span> <span>20</span>
      <%= f.input :price, as: :range, collection: @prices, label: false, prompt: "Price"%>
      </div>
      <div class="col-4"><%= f.input :level, collection: @levels, label: false, prompt: "Level"%></div>
      <div class="col-4"><%= f.input :ratings, collection: @ratings, label: false, prompt: "Rating"%></div>
    </div>
      <div class="col-4"><%= f.button :submit, "Apply filter", class: "search-btn" %></div>
      <% end %>
  </div>
</div>

<hr>

<div class="index-cards">

  <% search_items = ["yoga", "pilates", "yogis", "yogi", "yoga teacher", "yoga trainer", "yoga class"] %>

  <% @teachers.each do |teacher| %>

  <div class="card-teacher">

    <img src="https://source.unsplash.com/featured/? <%= search_items.sample %>"  alt="" style="object-fit: cover;">

    <div class="card-teacher-infos">

      <h2><strong><%= teacher.first_name %></strong> <strong><%= teacher.last_name %></strong></h2>
      <% if teacher.certification == true %>
      <p>Certified Teacher | <%= teacher.certificationhours %>h Yoga Alliance </p>
        <% else %>
      <p> Community Teacher </p>
      <% end %>
        <hr>
      <p><strong>Styles</strong></p>
      <p><%= teacher.style %> </p>
      <p><strong>Price from</strong></p>
      <p><%= "from #{[15.99, 18.50,12.99,13.99,14.75].sample}" %></p>
          <div class="text-muted">
            <% teacher.ratings.times do %>
              <i class="fas fa-heart"></i>
            <% end %>
          </div>
    </div>
  </div>
  <% end %>
</div>



