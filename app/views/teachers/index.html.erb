<div class="container-back-buttom">
  <%= link_to "<", root_path, class:"go-back-buttom" %>
  <br>
</div>

<h2 style="display: flex; flex-direction: row; justify-content: center; align-items: center; margin-top: 14px;" > Yoga teachers</h2>
<!-- Insert the location afterwards-->

<hr>

  <div class="index-form">
     <%= simple_form_for :query, url: teachers_path, method: "GET" do |f| %>
    <div class="row g-2">
      <div class="col-4"><%= f.input :address, collection: @addresses, label: false, prompt: "City", input_html: { class: "filter_search index-input"} %></div>
      <div class="col-4"><%= f.input :date, as: :string, required: false, label: false, prompt: "Date", input_html: {class: "datepicker index-input"}%></div>
      <div class="col-4"><%= f.input :style, collection: @styles, label: false, prompt: "Style", input_html: { class: "index-input" } %></div>
    </div>
    <div class="row g-3">
      <div class="col-4">
      <span>10</span> <span>- Price -</span> <span>20</span>
      <%= f.input :price, as: :range, collection: @prices, label: false, prompt: "Price" %></div>
      <div class="col-4"><%= f.input :level, collection: @levels, label: false, prompt: "Level", input_html: { class: "index-input" } %></div>
      <div class="col-4"><%= f.input :ratings, collection: @ratings, label: false, prompt: "Rating", input_html: { class: "index-input" } %></div>
    </div>
      <div class="col-4"><%= f.button :submit, "Apply filter", class: "search-btn" %></div>
      <% end %>
  </div>


<hr>

<div class="index-cards">

  <% search_items = ["yoga", "pilates", "yogis", "yogi", "yoga teacher", "yoga trainer", "yoga class"] %>

  <% @teachers.each do |teacher| %>
<%= link_to teacher_path(teacher)  do %>
  <div class="card-teacher">

    <img src="https://source.unsplash.com/featured/? <%= search_items.sample %>" alt="">

    <div class="card-teacher-infos">
      <div class="headline-area">
        <h2><%= teacher.first_name %> <%= teacher.last_name %></h2>
        <div class="text-muted" style="font-size: 12px;">
          <% teacher.ratings.times do %>
            <i class="fas fa-heart"></i>
          <% end %>
        </div>
      </div>
        <% if teacher.certification == true %>
        <p>Certified Teacher | <%= teacher.certificationhours %>h Yoga Alliance </p>
          <% else %>
        <p> Community Teacher </p>
        <% end %>
          <hr>
        <p><%= teacher.style %> <vertical-bar>&#124;&#124;&#124;&#124;&#124;</vertical-bar> </p>
        <p>Teaching in Berlin</p>
        <p>MEDIUM | ADVANCED</p>
        <p>Classes from <%= "#{[15.99, 18.50,12.99,13.99,14.75].sample}" %></p>

    </div>

  </div>
  <% end %>
    <% end %>
</div>


